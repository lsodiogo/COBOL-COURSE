                    IF (LINHA = 25 AND COLUNA = 08) THEN
                       MOVE 20 TO LINHA
                       MOVE 68 TO COLUNA
                    END-IF

      *    INSTRUÇÃO PARA MOSTRAR LISTA NOUTRA PÁGINA.

                    IF (LINHA = 25 AND COLUNA = 68) THEN
                       DISPLAY MAIS-LISTA-SCREEN
                       ACCEPT CONTINUA-LISTA2
                       IF KEYSTATUS = 1002 THEN
                          DISPLAY LIMPAR-LISTA1
