                 AT END SET STATUS-SIGLA-PROF TO TRUE
                    DISPLAY FIM-LISTA-SCREEN
                    ACCEPT MENU-CONS-PROF
                    CLOSE PROFS
                    EXIT SECTION
                    IF KEYSTATUS = 1003 THEN
                       CLOSE PROFS
                       EXIT SECTION
                    END-IF

                 NOT AT END
                 IF FDESTADO <> "2" THEN
                    DISPLAY LISTA-PROFS-SCREEN1
                    ADD 01 TO LINHA

      *    INSTRUÇÃO PARA MOSTRAR LISTA NOUTRA COLUNA.

                    IF (LINHA = 25 AND COLUNA = 08) THEN
                       MOVE 20 TO LINHA
                       MOVE 68 TO COLUNA
                    END-IF

