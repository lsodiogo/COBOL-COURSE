       CONSULTAR SECTION.
      ******************************************************************
      *    MENU ONDE O UTILIZADOR PODE APENAS CONSULTAR DATA DO HORARIO.
      ******************************************************************
           MOVE "; MENU: CONSULTAR" TO WSLOG-SECTION

           OPEN INPUT HORARIOSFILE
           MOVE ZEROS TO NOVA-ESCOLHA-SCREEN1
           PERFORM UNTIL NOVA-ESCOLHA-SCREEN1 = 2

              PERFORM WITH TEST AFTER UNTIL VALID-MENU
                 MOVE ZEROS TO MENU-CONS
                 ACCEPT MENU-CONSULTA-SCREEN
                 IF KEYSTATUS = 1003 THEN
                    CLOSE HORARIOSFILE
                    EXIT SECTION
                 END-IF

                 IF NOT VALID-MENU THEN
                    ACCEPT MENSAGEM-ERRO-SCREEN
                 END-IF
              END-PERFORM

              EVALUATE TRUE
                 WHEN DATAS-PASSADAS
                    DISPLAY CONSULTAR-SCREEN
                    PERFORM LISTA-HORARIO-PASSADAS
                    IF KEYSTATUS = 1003 OR VERDADEIRO = "S" THEN
                       CLOSE HORARIOSFILE
                       EXIT SECTION
                    END-IF

                 WHEN DATAS-FUTURAS
                    DISPLAY CONSULTAR-SCREEN
                    PERFORM LISTA-HORARIO-FUTURO
                    IF KEYSTATUS = 1003 OR VERDADEIRO = "S" THEN
                       CLOSE HORARIOSFILE
                       EXIT SECTION
                    END-IF

                 WHEN DATAS-UNIDADES
                    DISPLAY LIMPAR-LISTA
                    PERFORM WITH TEST AFTER UNTIL VERDADEIRO NOT = "S"
                       MOVE SPACES TO MENU-CONS-AULA, VERDADEIRO
                       DISPLAY HORARIO-UNID-SCREEN
                       PERFORM LISTA-UNIDADES1
                       IF KEYSTATUS = 1003 THEN
                          CLOSE HORARIOSFILE
                          EXIT SECTION
                       END-IF
                       MOVE CONS-AULA-UNIDADE TO LINK-TEXT
                       PERFORM SPACE-UPPER
                       MOVE LINK-TEXT TO CONS-AULA-UNIDADE
                       OPEN INPUT UNIDADES
                          MOVE CONS-AULA-UNIDADE TO FDSIGLAUNIDADE
                          READ UNIDADES RECORD
                             INVALID KEY
                                ACCEPT UNIDADE-INEXISTE
                                IF KEYSTATUS = 1003 THEN
                                   CLOSE UNIDADES
                                   CLOSE HORARIOSFILE
                                   EXIT SECTION
                                END-IF
                                MOVE "S" TO VERDADEIRO
                                DISPLAY LIMPAR-LINES
                          END-READ
                    END-PERFORM
                    CLOSE UNIDADES
                    DISPLAY CONSULTAR-SCREEN
                    PERFORM LISTA-HORARIO-UNIDADES
                    IF KEYSTATUS = 1003 OR VERDADEIRO = "S" THEN
                       CLOSE HORARIOSFILE
                       EXIT SECTION
                    END-IF

                 WHEN DATAS-DOCENTES
                    DISPLAY LIMPAR-LISTA
                    PERFORM WITH TEST AFTER UNTIL VERDADEIRO NOT = "S"
                       MOVE SPACES TO MENU-CONS-PROF, VERDADEIRO
                       DISPLAY HORARIO-PROF-SCREEN
                       PERFORM LISTA-PROFS1
                       IF KEYSTATUS = 1003 THEN
                          CLOSE HORARIOSFILE
                          EXIT SECTION
                       END-IF
                       MOVE CONS-AULA-PROF TO LINK-TEXT
                       PERFORM SPACE-UPPER
                       MOVE LINK-TEXT TO CONS-AULA-PROF
                       OPEN INPUT PROFS
                          MOVE CONS-AULA-PROF TO FDSIGLAPROF
                          READ PROFS RECORD
                             INVALID KEY
                                ACCEPT PROF-INEXISTE
                                IF KEYSTATUS = 1003 THEN
                                   CLOSE PROFS
                                   CLOSE HORARIOSFILE
                                   EXIT SECTION
                                END-IF
                                MOVE "S" TO VERDADEIRO
                                DISPLAY LIMPAR-LINES
                          END-READ
                    END-PERFORM
                    CLOSE PROFS
                    DISPLAY CONSULTAR-SCREEN
                    PERFORM LISTA-HORARIO-PROFS
                    IF KEYSTATUS = 1003 OR VERDADEIRO = "S" THEN
                       CLOSE HORARIOSFILE
                       EXIT SECTION
                    END-IF
              END-EVALUATE

              DISPLAY LIMPAR-LISTA
              DISPLAY LIMPAR-LINES

              IF VERDADEIRO NOT = "S" THEN
                 MOVE CONS-AULADATA TO FDDATAAULA

                 READ HORARIOSFILE RECORD INTO C-HORARIO
                    INVALID KEY
                       ACCEPT REGISTO-INEXISTENTE
                       IF KEYSTATUS = 1003 THEN
                          CLOSE HORARIOSFILE
                          EXIT SECTION
                       END-IF
                       DISPLAY LIMPAR-LINES
                    NOT INVALID KEY
                       MOVE "; REGISTO: " TO WSLOG-VIEW-HEADING
                       MOVE CONS-AULADATA TO WSLOG-VIEW-KEY
                       MOVE "; CONSULTA COM SUCESSO"
                       TO WSLOG-VIEW-MESSAGE
                       PERFORM SAVE-LOGRECORDS
                       DISPLAY CONS-DADOS-SCREEN
                       PERFORM GET-NOME-UNIDADE-PROF
                 END-READ

      *    INSTRUÇÕES PARA MOSTRAR O REGISTO SEM BLOQUEAR MAS VERIFICAR
      *    SE O REGISTO ESTÁ BLOQUEADO POR OUTRO UTILIADOR, MOSTRANDO NA
      *    MESMA OS DADOS E MENSAGEM DE ALERTA.

                 READ HORARIOSFILE RECORD WITH LOCK
                 END-READ
                 COMMIT
                 IF FS-HORARIOS = "51" THEN
                    DISPLAY ATENCAO-REGISTO-LOCK
                 END-IF
              END-IF

              PERFORM WITH TEST AFTER UNTIL NOVA-ESCOLHA = 1 OR 2
                 MOVE ZEROS TO NOVA-ESCOLHA-SCREEN1
                 ACCEPT NOVA-CONSULTA
                 IF KEYSTATUS = 1003 THEN
                    CLOSE HORARIOSFILE
                    EXIT SECTION
                 END-IF

                 IF NOVA-ESCOLHA < 1 OR NOVA-ESCOLHA > 2 THEN
                    ACCEPT MENSAGEM-ERRO-SCREEN
                    IF KEYSTATUS = 1003 THEN
                       CLOSE HORARIOSFILE
                       EXIT SECTION
                    END-IF
                    DISPLAY LIMPAR-LINES
                 END-IF
              END-PERFORM

           END-PERFORM
           CLOSE HORARIOSFILE
           EXIT SECTION.

       GET-NOME-UNIDADE-PROF SECTION.
      ******************************************************************
      *    MENU QUE É CHAMADO PARA MOSTRAR O NOME DO DOCENTE E DA
      *    UNIDADE DE FORMAÇÃO, AO APRESENTAR OS DADOS DA DATA.
      ******************************************************************
           OPEN INPUT UNIDADES
              MOVE FDDATAUNIDADE TO FDSIGLAUNIDADE
              READ UNIDADES
                 NOT INVALID KEY
                    DISPLAY SHOW-UNIDADE-SCREEN
              END-READ
           CLOSE UNIDADES

           OPEN INPUT PROFS
              MOVE FDDATAPROF TO FDSIGLAPROF
              READ PROFS
                 NOT INVALID KEY
                    DISPLAY SHOW-PROF-SCREEN
              END-READ
           CLOSE PROFS
           EXIT SECTION.

       ADMIN-AUTENTICACAO SECTION.
      ******************************************************************
      *    MENU QUE É CHAMADO PARA AUTENTICAR O ADMINISTRADOR.
      ******************************************************************
           OPEN INPUT ADMINS
           IF FS-ADMINS = 35
              ACCEPT ADMIN-INEXISTE-SCREEN
              CLOSE ADMINS
              EXIT SECTION
           END-IF

           PERFORM WITH TEST AFTER UNTIL VERDADEIRO = "S"
              MOVE SPACES TO USER-SCREEN, PASSWORD-SCREEN, VERDADEIRO
              DISPLAY LIMPAR-LINES
              DISPLAY AUTENTICACAO-SCREEN

              ACCEPT USER-SCREEN
              IF KEYSTATUS = 1003 THEN
                 CLOSE ADMINS
                 EXIT SECTION
              END-IF

              ACCEPT PASSWORD-SCREEN
              IF KEYSTATUS = 1003 THEN
                 CLOSE ADMINS
                 EXIT SECTION
              END-IF

              MOVE WSADMIN TO FDADMIN
              READ ADMINS RECORD
                 INVALID KEY
                    MOVE "; ACESSO FOI NEGADO"
                    TO WSLOG-DELETE-DENIED-MESSAGE
                    MOVE "; USER: " TO WSLOG-USER-HEADING-DENIED
                    MOVE WSUSERNAME TO WSLOG-USER-DENIED
                    MOVE "; PASS: " TO WSLOG-PASS-HEADING-DENIED
                    MOVE WSPASSWORD TO WSLOG-PASS-DENIED
                    PERFORM SAVE-LOGRECORDS
                    DISPLAY LIMPAR-LISTA
                    ACCEPT AUTENTC-NEGADA-SCREEN
                    CLOSE ADMINS
                    EXIT SECTION
              END-READ

              MOVE "S" TO VERDADEIRO
           END-PERFORM
           CLOSE ADMINS
           EXIT SECTION.

       ELIMINAR SECTION.
      ******************************************************************
      *    MENU ONDE O UTILIZADOR PODE ELIMINAR QUALQUER DATA DO HORARIO
      ******************************************************************
           MOVE "; MENU: ELIMINAR" TO WSLOG-SECTION

           PERFORM ADMIN-AUTENTICACAO
           IF KEYSTATUS = 1003 OR VERDADEIRO NOT = "S" THEN
              EXIT SECTION
           END-IF

           OPEN I-O HORARIOSFILE
           MOVE ZEROS TO NOVA-ESCOLHA-SCREEN3
           PERFORM UNTIL NOVA-ESCOLHA-SCREEN3 = 2

              DISPLAY ELIMINAR-SCREEN

              PERFORM LISTA-HORARIO-FUTURO
              IF KEYSTATUS = 1003 OR VERDADEIRO = "S" THEN
                 CLOSE HORARIOSFILE
                 EXIT SECTION
              END-IF

              DISPLAY LIMPAR-LISTA
              DISPLAY LIMPAR-LINES

      *    INSTRUÇÕES PARA VERIFICAÇÃO SE UTILIZADOR TENTAR ALTERAR
      *    DATAS QUE JÁ PASSARAM

              IF CONS-AULADATA < FUNCTION CURRENT-DATE (1:8) THEN
                 MOVE "; REGISTO: " TO WSLOG-DELETE-HEADING
                 MOVE CONS-AULADATA TO WSLOG-DELETE-KEY
                 MOVE "; USER: " TO WSLOG-USER-HEADING
                 MOVE WSUSERNAME TO WSLOG-USER
                 MOVE "; TENTATIVA ELIMINICAO DATA PASSADA"
                 TO WSLOG-DELETE-MESSAGE
                 PERFORM SAVE-LOGRECORDS
                 ACCEPT DATAS-PASSADAS-SCREEN
                 CLOSE HORARIOSFILE
                 EXIT SECTION
             END-IF

              MOVE CONS-AULADATA TO FDDATAAULA

              READ HORARIOSFILE RECORD INTO C-HORARIO WITH LOCK
                 INVALID KEY
                    ACCEPT REGISTO-INEXISTENTE
                    IF KEYSTATUS = 1003 THEN
                       CLOSE HORARIOSFILE
                       EXIT SECTION
                    END-IF
                    DISPLAY LIMPAR-LINES
                 NOT INVALID KEY
                    DISPLAY CONS-DADOS-SCREEN
                    PERFORM GET-NOME-UNIDADE-PROF
                    PERFORM CONFIRMAR-ELIMINAR
                    IF KEYSTATUS = 1003 THEN
                       CLOSE HORARIOSFILE
                       EXIT SECTION
                    END-IF
              END-READ

              IF FS-HORARIOS = "51" THEN
                 MOVE "; REGISTO: " TO WSLOG-VIEW-HEADING
                 MOVE CONS-AULADATA TO WSLOG-VIEW-KEY
                 MOVE "; REGISTO BLOQUEADO" TO WSLOG-VIEW-MESSAGE
                 PERFORM SAVE-LOGRECORDS
                 DISPLAY ERRO-ACESSO-SCREEN
              END-IF

              PERFORM WITH TEST AFTER UNTIL NOVA-ESCOLHA = 1 OR 2
                 MOVE ZEROS TO NOVA-ESCOLHA-SCREEN3
                 DISPLAY LIMPAR-LINES
                 ACCEPT NOVO-ELIMINAR
                 IF KEYSTATUS = 1003 THEN
                    CLOSE HORARIOSFILE
                    EXIT SECTION
                 END-IF

                 IF NOVA-ESCOLHA < 1 OR NOVA-ESCOLHA > 2 THEN
                    ACCEPT MENSAGEM-ERRO-SCREEN
                    IF KEYSTATUS = 1003 THEN
                       CLOSE HORARIOSFILE
                       EXIT SECTION
                    END-IF
                    DISPLAY LIMPAR-LINES
                 END-IF
              END-PERFORM

           END-PERFORM
           CLOSE HORARIOSFILE
           EXIT SECTION.

       CONFIRMAR-ELIMINAR SECTION.
      ******************************************************************
